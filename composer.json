{
    "name": "scrapinglink/php-scraping-link",
    "description": "Package to use Scraping Link API from PHP",
    "keywords": [
        "ScrapingLink",
        "php-scraping-link"
    ],
    "homepage": "https://github.com/scrapinglink/php-scraping-link",
    "license": "MIT",
    "authors": [
        {
            "name": "Scraping Link",
            "email": "info@scraping.link",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Scrapinglink\\PhpScrapingLink\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scrapinglink\\PhpScrapingLink\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
